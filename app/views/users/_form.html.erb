<%= render 'shared/error_msg', obj: @user %>
<div class='well'>
  <%= form_for @user do |f| %>
  <div class='form-group'>
    <%= f.label :username %>
    <br/>
    <%= f.text_field :username %>
  </div>
  <div class='form-group'>
    <%= f.label :password %>
    <br/>
    <%= f.password_field :password %>
  </div>
  <div class='form-group'>
    <%= f.label :time_zone %>
    <br/>
    <%= f.time_zone_select :time_zone, nil, default: "Pacific Time (US & Canada)" %>
  </div>
  <%= f.submit(@user.new_record? ? 'Register' : 'Update', class: 'btn btn-primary')%>
  <% end %>
</div>